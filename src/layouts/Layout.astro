---
import '@styles/global.css';

interface Props {
	title: string;
	description?: string;
}

const { 
	title, 
	description = "Zidan Omar Hamid - Software Engineer with 3+ years of experience building backend and frontend systems for data-driven applications." 
} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		
		<title>{title}</title>
		<meta name="author" content="Zidan Omar Hamid" />
		<meta name="keywords" content="Software Engineer, Go, TypeScript, NestJS, React, Vue, Kubernetes, Docker, IoT, Backend Developer, Frontend Developer" />
		
		<meta property="og:type" content="website" />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:site_name" content="Zidan Omar Hamid" />
		
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />
		
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;500;600;700&display=swap" rel="stylesheet" />
	</head>
	<body>
		<slot />
		
		<script>
			import "@scripts/theme-manager.ts";
			import "@scripts/ui-interactions.ts";
		</script>
	</body>
</html>
